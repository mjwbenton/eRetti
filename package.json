{
  "name": "@mattb.tech/kindle-writer",
  "version": "0.1.0",
  "description": "A tool for using a Kindle as a typewriter",
  "main": "index.js",
  "bin": {
    "kindle-writer-start": "./src/index.js",
    "kindle-writer-install-profile": "./src/installProfile.js"
  },
  "files": [
    "src/*.js",
    "src/views/*.html",
    "profile"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "start": "npm run build && OVERRIDE_FILE=data node src/index.js"
  },
  "author": "Matt Benton <m@mattb.tech>",
  "license": "MIT",
  "dependencies": {
    "handlebars": "^4.7.6",
    "koa": "^2.11.0",
    "koa-easy-ws": "^1.1.3",
    "koa-router": "^8.0.8",
    "koa-views": "^6.2.1"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/koa": "^2.11.3",
    "@types/koa-router": "^7.4.0",
    "@types/koa-views": "^2.0.4",
    "typescript": "^3.8.3"
  }
}
